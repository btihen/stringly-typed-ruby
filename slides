!CODE: language=ruby, callout=8,9
class WrappingDatabase < SimpleDelegator
  def select_from(table, where)
    raw_results = __getobj__.select_from(table,where)
    if @conversions[table]
      raw_results.map { |row_hash|
        row_hash.map { |column,value|
          if @conversions[table][column]
            # e.g. value = ZipCode.new("90210")
            value = @conversions[table][column].new(value)
          end
          [column,value]
        }.to_h
      }
    end
  end
end

!NORMAL
Active Record

!CODE: language=ruby
class Address < ActiveRecord::Base
  serialize :zip_code, ZipCode
end

!CODE: language=ruby
class ZipCode
  def self.load(raw_string)
    self.new(raw_string)
  end

  def self.dump(zip_code)
    zip_code.to_str
  end
end

!CODE: language=none
address = Address.find(43) # has the bad zipcode
&lt;ArgumentError "must be a ZipCode"&gt;

!CODE: language=ruby
class AddressReader
  def read_new_address

    # ...

    zip_code = ZipCode.new(gets)

    Address.create!(street: street,
                      city: city,
                     state: state,
                  zip_code: zip_code)
  end
end

