!CODE: language=ruby
class ZipCode
  def initialize(string)
    @raw_zipcode = string
  end
end

!CODE: language=ruby
class ZipCode
  def initialize(string)
    unless string =~ /^\d\d\d\d\d$/
      raise 'invalid zipcode' 
    end
    @raw_zipcode = string
  end
end

!CODE: language=ruby
zip1 = ZipCode.new("90210")

zip2 = ZipCode.new("WALSH")
# => boom
# zip2 never gets assigned

!CODE: language=ruby
class ZipCode
  def raw_zipcode
    @raw_zipcode
  end
end

!IMAGE
images/zipcode_map.png

!CODE: language=ruby
class ZipCode
  def description
    where = {
      "00" => "Puerto Rico",
      "03" => "Maine",
      ...
      "73" => "Oklahoma",
      "97" => "Oregon",
      "99" => "Alaska"
    }[@raw_zipcode[0..1]]
    "#{@raw_zipcode} (Somewhere in #{where})"
  end
end

